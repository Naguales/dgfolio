---
// Hero.astro

import myPhoto from '../assets/my-photo.png';
---

<section id="hero" class="hero">
  <!-- Background image + softening overlays -->
  <div class="hero-bg">
    <div class="hero-bg-overlay"></div>
  </div>

  <!-- Main content wrapper -->
  <div class="hero-inner">
    <div class="hero-content">
      
      <!-- Avatar -->
      <div class="hero-avatar">
        <div class="hero-avatar-inner">
          <img src={myPhoto.src} alt="Dmitry Grigorovich" />
        </div>
      </div>

      <!-- Name -->
      <h1 class="hero-title">Dmitry Grigorovich</h1>

      <!-- Subtitle -->
      <p class="hero-subtitle">
        Senior Software Engineer specializing in modern C++, Qt, and cross-platform UI/UX, 
        creating high-performance applications with strong architecture and a focus on pixel-perfect user experiences.
      </p>

      <!-- Buttons -->
      <div class="hero-actions">
        <a href="#projects" class="btn btn-primary">View Projects</a>
        <a href="mailto:dmitry.grigorovich7@gmail.com" class="btn btn-outline">
          <span class="icon icon-email" aria-hidden="true"></span>
          Get in Touch
        </a>
      </div>

      <!-- Social links -->
      <div class="hero-social">
        <a href="https://github.com/Naguales" target="_blank" rel="noopener noreferrer"
           aria-label="GitHub" class="social-icon">
          <span class="icon icon-github"></span>
        </a>

        <a href="https://www.linkedin.com/in/dmitry-grigorovich/" target="_blank" rel="noopener noreferrer"
           aria-label="LinkedIn" class="social-icon">
          <span class="icon icon-linkedin"></span>
        </a>
      </div>
    </div>

    <!-- Scroll arrow -->
    <a href="#about" class="hero-scroll" aria-label="Scroll to About section">
      <svg viewBox="0 0 24 24" class="hero-scroll-icon">
        <path d="M12 5v14" />
        <path d="m19 12-7 7-7-7" />
      </svg>
    </a>
  </div>
</section>

<style>
  html, body {
    overflow-x: hidden;
  }

  /* Root hero container */
  .hero {
    position: relative;
    min-height: 100vh;
    width: 100vw;
    margin-left: 50%;
    transform: translateX(-50%);
    overflow: hidden;
    font-family: var(--font-primary);
    color: var(--color-primary);
    background: var(--color-background);
  }

  /* Background image layer */
  .hero-bg {
    position: absolute;
    inset: 0;
    background-image: url('/src/assets/bg.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 0;
  }

  /* Soft violet tint overlay (the one we added) */
  .hero-bg::after {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(247, 242, 255, 0.65); /* soft theme tint */
    pointer-events: none;
    z-index: 2;
  }

  /* Highlight + vignette overlay for readability */
  .hero-bg-overlay {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 50% 20%, rgba(255, 255, 255, 0.9), transparent 60%),
      radial-gradient(circle at 0% 100%, rgba(255, 255, 255, 0.85), transparent 65%);
    mix-blend-mode: screen;
    opacity: 0.9;
    pointer-events: none;
  }

  /* Content wrapper above overlay */
  .hero-inner {
    position: relative;
    z-index: 3;
    max-width: 64rem;
    margin: 0 auto;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 1.5rem;
    box-sizing: border-box;
  }

  .hero-content {
    text-align: center;
    margin-top: 1.5rem;
  }

  /* ------------------------------------------------------------
     Avatar
     ------------------------------------------------------------ */
  .hero-avatar {
    display: flex;
    justify-content: center;
    margin-bottom: 1.75rem;
  }

  .hero-avatar-inner {
    width: 112px;
    height: 112px;
    border-radius: 999px;
    background: radial-gradient(circle at 30% 20%, #fff, var(--color-accent-light));
    border: 2px solid color-mix(in oklab, var(--color-accent) 40%, white 60%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  /* ------------------------------------------------------------
     Typography
     ------------------------------------------------------------ */
  .hero-title {
    font-weight: 800;
    font-size: clamp(2.4rem, 1.7rem + 2.2vw, 3.4rem);
    margin-bottom: 0.75rem;
    color: transparent;
    background-image: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
  }

  .hero-subtitle {
    max-width: 36rem;
    margin: 0 auto 2.25rem;
    font-family: var(--font-secondary);
    font-size: clamp(1rem, 0.95rem + 0.25vw, 1.2rem);
    line-height: 1.55;
    color: var(--color-muted);
  }

  /* ------------------------------------------------------------
     Buttons
     ------------------------------------------------------------ */
  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 1.75rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.7rem 1.9rem;
    border-radius: 0.35rem;
    border: 1px solid transparent;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
  }

  .btn-primary {
    background: var(--color-accent);
    color: #fff;
    border-color: var(--color-accent);
    transition: background-color 0.25s ease;
  }
  .btn-primary:hover {
    background: var(--color-accent-hover);
  }

  .btn-outline {
    background: var(--color-button-default-bg);
    color: var(--color-primary);
    border-color: var(--color-border-accent);
  }
  .btn-outline:hover {
    background: var(--color-tag-bg);
    border-color: var(--color-tag-bg);
    color: var(--color-tag-text);
  }

  /* ------------------------------------------------------------
     Social Icons
     ------------------------------------------------------------ */
  .hero-social {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .social-icon {
    width: 40px;
    height: 40px;
    border-radius: 999px;
    border: 1px solid var(--color-border);
    background: var(--color-button-default-bg);
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.04);
    transition: 0.25s ease;
  }

  .social-icon:hover {
    background: var(--color-tag-bg);
    border-color: var(--color-accent);
    color: var(--color-tag-text);
  }

  /* Masked icons */
  .icon {
    width: 20px;
    height: 20px;
    mask-repeat: no-repeat;
    mask-position: center;
    mask-size: contain;
    background-color: currentColor;
  }

  .icon-github    { mask-image: url('../assets/github.svg'); }
  .icon-linkedin  { mask-image: url('../assets/linkedin.svg'); }
  .icon-email     { mask-image: url('../assets/email.svg'); margin-right: 0.5rem; }

  /* ------------------------------------------------------------
     Scroll Arrow
     ------------------------------------------------------------ */
  .hero-scroll {
    margin-top: 1.8rem;
    width: 40px;
    height: 40px;
    border-radius: 999px;
    border: 1px solid var(--color-border-accent);
    background: rgba(255, 255, 255, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    animation: hero-pulse 2s infinite ease-in-out;
    transition: 0.2s ease;
  }

  .hero-scroll:hover {
    background: var(--color-tag-bg);
    border-color: var(--color-tag-bg);
    color: var(--color-tag-text);
  }

  .hero-scroll-icon {
    width: 22px;
    height: 22px;
    stroke: var(--color-accent);
    fill: none;
    stroke-width: 2;
  }

  @keyframes hero-pulse {
    0%   { box-shadow: 0 0 0 0 rgba(122, 76, 255, 0.35); }
    70%  { box-shadow: 0 0 0 3px rgba(122, 76, 255, 0); }
    100% { box-shadow: 0 0 0 0 rgba(122, 76, 255, 0); }
  }

  /* ------------------------------------------------------------
     Mobile Adjustments
     ------------------------------------------------------------ */
  @media (max-width: 640px) {
    .hero-inner { padding-top: 4.5rem; padding-bottom: 2.5rem; }
    .hero-avatar-inner { width: 96px; height: 96px; }
    .btn { width: 100%; max-width: 260px; }
  }
</style>
